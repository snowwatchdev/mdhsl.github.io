   <!-- Temperature Response -->
   <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <sml:parameters>
      <sml:ParameterList>
         <sml:parameter name="steadyState" xlink:arcrole="urn:ogc:def:property:calibration">
            <swe:DataArray updatable="false">
               <swe:elementCount>
                  <swe:Count>
                     <swe:value>21</swe:value>
                  </swe:Count>
               </swe:elementCount>
               <swe:elementType name="calibrationPoint">
                  <swe:DataRecord>
                     <swe:field name="temperature">
                        <swe:Quantity id="TEMP1" definition="urn:ogc:def:property:ogc:1.0:temperature">
                           <swe:uom code="cel" />
                        </swe:Quantity>
                     </swe:field>
                     <swe:field name="resistance">
                        <swe:Quantity id="RES" definition="urn:ogc:def:property:ogc:1.0:resistance">
                           <swe:uom code="kohm" />
                        </swe:Quantity>
                     </swe:field>
                  </swe:DataRecord>
               </swe:elementType>
               <swe:encoding>
                  <swe:TextEncoding tokenSeparator="," blockSeparator="&#x20;" decimalSeparator="." />
               </swe:encoding>
               <swe:values>
                  -40,328.4 -35,237.7 -30,173.9
                  -25,128.5 -20,95.89 -15,72.23
                  -10,54.89 -5,42.07 0,32.51
                  5,25.31 10,19.86 15,15.69
                  20,12.49 25,10 30,8.06 35,6.536
                  40,5.331 45,4.373 50,3.606
                  55,2.989 60,2.49
               </swe:values>
            </swe:DataArray>
         </sml:parameter>
         <sml:parameter name="accuracy" xlink:arcrole="urn:ogc:def:property:OGC:measurementAccuracy">
            <swe:ConditionalValue definition="urn:ogc:def:property:OGC:error">
               <swe:condition name="cableLength">
                  <swe:Quantity definition="urn:ogc:def:property:OGC:length">
                     <swe:uom code="m" />
                     <swe:constraint>
                        <swe:AllowedValues>
                           <swe:interval>-INF 10</swe:interval>
                        </swe:AllowedValues>
                     </swe:constraint>
                  </swe:Quantity>
               </swe:condition>
               <swe:data>
                  <swe:NormalizedCurve>
                     <swe:function>
                        <swe:Curve>
                           <swe:elementCount>
                              <swe:Count>
                                 <swe:value>6</swe:value>
                              </swe:Count>
                           </swe:elementCount>
                           <swe:elementType>
                              <swe:SimpleDataRecord>
                                 <swe:field name="realTemperature">
                                    <swe:Quantity definition="urn:ogc:def:property:OGC:temperature">
                                       <swe:uom code="cel" />
                                    </swe:Quantity>
                                 </swe:field>
                                 <swe:field name="absoluteError">
                                    <swe:Quantity definition="urn:ogc:def:property:OGC:absoluteError">
                                       <swe:uom code="cel" />
                                    </swe:Quantity>
                                 </swe:field>
                              </swe:SimpleDataRecord>
                           </swe:elementType>
                           <swe:encoding>
                              <swe:TextBlock tokenSeparator="," blockSeparator="&#x20;" decimalSeparator="." />
                           </swe:encoding>
                           <swe:values>-40,0 -10,0.1 15,0.3 27,0.5 44,1 60,2.1</swe:values>
                        </swe:Curve>
                     </swe:function>
                  </swe:NormalizedCurve>
               </swe:data>
            </swe:ConditionalValue>
         </sml:parameter>
         <sml:parameter name="latency" xlink:arcrole="urn:ogc:def:property:OGClatencyTime">
            <swe:ConditionalValue>
               <swe:condition name="medium">
                  <swe:Category definition="urn:ogc:def:property:OGC:medium">
                     <swe:value>air</swe:value>
                  </swe:Category>
               </swe:condition>
               <swe:data>
                  <swe:Quantity definition="urn:ogc:def:property:OGC:duration">
                     <swe:uom code="s" />
                     <swe:value>10</swe:value>
                  </swe:Quantity>
               </swe:data>
            </swe:ConditionalValue>
         </sml:parameter>
      </sml:ParameterList>
   </sml:parameters>
   
